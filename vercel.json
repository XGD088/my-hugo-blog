{
  "build": {
    "env": {
      "HUGO_VERSION": "0.147.8"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    },
    {
      "source": "/index.xml",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/rss+xml; charset=utf-8"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    }
  ]
} 